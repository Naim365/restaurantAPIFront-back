<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= categoryTitle %> </h1>
  </div>

  <div class="box">


  <%  newCategoryNames.forEach(function(category) { %>

  <form action="/delete" method="post">    
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=category._id%>" onChange="this.form.submit()"> 
      <p><%=category.name%></p>
    </div>
    <input type="hidden" name="cardName" value="<%= categoryTitle %>"></input>
  </form>
<%  }) %>


      <form class="item" action="/" method="post">
        <input type="text" name="newCategoryNames" placeholder="New Category" autocomplete="off">
        <button type="submit" name="card" value="<%= categoryTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
